// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id               Int      @id @default(autoincrement())
  weight           Int      @default(1)
  slug             String?  @unique
  title            String
  description      String?
  content          Json?
  tgPostId         String?  @unique
  thumbnailAssetId String?
  thumbnailAsset   Asset?   @relation("ArticleThumbnail", fields: [thumbnailAssetId], references: [id], onDelete: SetNull)
  ogImageAssetId   String?
  ogImageAsset     Asset?   @relation("ArticleOgImage", fields: [ogImageAssetId], references: [id], onDelete: SetNull)
  published        Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  tags             Tag[]
}

model Tag {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  slug         String    @unique
  coverAssetId String?
  coverAsset   Asset?    @relation("TagCover", fields: [coverAssetId], references: [id], onDelete: SetNull)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  articles     Article[]
}

model Asset {
  id           String    @id @default(uuid())
  type         AssetType @default(IMAGE)
  bucket       String
  key          String    @unique
  url          String
  originalName String
  mimeType     String
  size         Int
  metadata     Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  thumbnailForArticles Article[] @relation("ArticleThumbnail")
  ogImageForArticles   Article[] @relation("ArticleOgImage")
  coverForTags         Tag[]     @relation("TagCover")
}

enum AssetType {
  IMAGE
  FILE
}
