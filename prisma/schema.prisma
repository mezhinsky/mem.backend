generator client {
  provider   = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id               Int      @id @default(autoincrement())
  weight           Int      @default(1)
  slug             String?  @unique
  title            String
  description      String?
  content          Json?
  thumbnailAssetId String?
  thumbnailAsset   Asset?   @relation("ArticleThumbnail", fields: [thumbnailAssetId], references: [id], onDelete: SetNull)
  ogImageAssetId   String?
  ogImageAsset     Asset?   @relation("ArticleOgImage", fields: [ogImageAssetId], references: [id], onDelete: SetNull)
  published        Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Asset {
  id           String    @id @default(uuid())
  type         AssetType @default(IMAGE)
  bucket       String
  key          String    @unique
  url          String
  originalName String
  mimeType     String
  size         Int
  metadata     Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  thumbnailForArticles Article[] @relation("ArticleThumbnail")
  ogImageForArticles   Article[] @relation("ArticleOgImage")
}

enum AssetType {
  IMAGE
  FILE
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  googleSub String   @unique @map("google_sub")
  email     String?
  name      String?
  avatar    String?
  role      Role     @default(USER)
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
